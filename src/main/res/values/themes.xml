<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.BluetoothMessenger" parent="Theme.Material3.DayNight">
        <!-- Disable ActionBar to use Toolbar instead -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        
        <!-- Divider color -->
        <item name="android:dividerHorizontal">@color/divider_light</item>
        
        <!-- Custom attributes -->
        <item name="messageSentColor">@color/message_sent_light</item>
        <item name="messageReceivedColor">@color/message_received_light</item>
        
        <!-- Material3 specific -->
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
    </style>
    
    <!-- Dark theme -->
    <style name="Theme.BluetoothMessenger.Dark" parent="Theme.BluetoothMessenger">
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- Divider color -->
        <item name="android:dividerHorizontal">@color/divider_dark</item>
        
        <!-- Custom attributes -->
        <item name="messageSentColor">@color/message_sent_dark</item>
        <item name="messageReceivedColor">@color/message_received_dark</item>
        
        <!-- Material3 specific -->
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.BluetoothMessenger.Splash" parent="Theme.BluetoothMessenger">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- Custom styles -->
    <style name="AppBarStyle" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <style name="MessageBubbleStyle" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardBackgroundColor">?attr/messageReceivedColor</item>
    </style>
    
    <style name="MessageBubbleStyleSent" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardBackgroundColor">?attr/messageSentColor</item>
    </style>
    
    <style name="DeviceItemStyle" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    
    <!-- Button styles -->
    <style name="PrimaryButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="SecondaryButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources> 